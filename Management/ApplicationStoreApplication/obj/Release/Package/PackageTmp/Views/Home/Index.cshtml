@model List<Management.Infrastructure.Facade.DTOModel.ClientDTO>
@{
	ViewBag.Title = "Index";
}

<div class="uk-grid uk-grid-width-small-1-2 uk-grid-width-large-1-3 uk-grid-width-xlarge-1-5 uk-text-center uk-sortable sortable-handler" id="dashboard_sortable_cards" data-uk-sortable="" data-uk-grid-margin="">
	@foreach (var item in Model)
	{
		<div>
			<div class="md-card md-card-hover md-card-overlay">
				<div class="md-card-content">
					<div class="epc_chart" data-percent="76" data-bar-color="#03a9f4">
						<span class="epc_chart_icon">
							@if (item.LogoUri.Length!=0)
							{
								<img src="data:image/jpeg;charset=utf-8;base64,@System.Convert.ToBase64String(item.LogoUri)" width="121px" height="121px" />
							}
							else
							{
								<img src="~/Content/assets/img/download.png" alt="@item.ClientName" />
							}
						</span>
						<canvas height="110" width="110"></canvas>
					</div>
				</div>
				<div class="md-card-overlay-content">
					<div class="uk-clearfix md-card-overlay-header">
						<i class="md-icon material-icons md-card-overlay-toggler"></i>
						<h3>
							<a href="@item.ClientUri">@item.ClientName</a>
						</h3>
					</div>
					@item.ClientName;
				</div>
			</div>
		</div>

	}
</div>