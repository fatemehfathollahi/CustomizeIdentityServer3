@model 	ApplicationStoreApplication.Models.PasswordModel

@{
    ViewBag.Title = "ChangePassword";
}

<div id="page_content_inner" dir="rtl">
	<form action="" class="uk-form-stacked" id="user_edit_form">
		<div class="uk-grid" data-uk-grid-margin="">
			<div class="uk-width-large-7-11 uk-row-first">
				<div class="md-card">
					<div class="uk-sticky-placeholder" style="height: 130px; margin: 0px;">
						<div class="user_heading" data-uk-sticky="{ top: 48, media: 960 }" style="margin: 0px;">
							@*<div class="user_heading_avatar fileinput fileinput-new" data-provides="fileinput">
									<div class="fileinput-new thumbnail">
										<img src="~/Content/assets/img/avatars/user.png" alt="user avatar" class="">
									</div>
									<div class="fileinput-preview fileinput-exists thumbnail" style="line-height: 82px;"></div>
									<div class="user_avatar_controls">
										<span class="btn-file">
											<span class="fileinput-new"><i class="material-icons"></i></span>
											<span class="fileinput-exists"><i class="material-icons"></i></span>
											<input type="hidden"><input type="file" name="user_edit_avatar_control" id="user_edit_avatar_control">
										</span>
										<a href="#" class="btn-file fileinput-exists" data-dismiss="fileinput"><i class="material-icons"></i></a>
									</div>
								</div>*@
							<div class="user_heading_content">
								<h2 class="heading_b">
									<span class="uk-text-truncate" id="user_edit_uname">@Model.FirstlastName</span>
									@*<span class="sub-heading" id="user_edit_position">Land acquisition specialist</span>*@
								</h2>
							</div>
							<div class="md-fab-wrapper">
									<div class="md-fab md-fab-toolbar md-fab-small md-fab-accent">
										<i class="material-icons"></i>
										<div class="md-fab-toolbar-actions">
											<button type="submit" id="user_edit_save" formmethod="post"
													data-uk-tooltip="{cls:'uk-tooltip-small',pos:'bottom'}" 
													title="ذخیره">
											<i class="material-icons md-color-white"></i></button>
										</div>
									</div>
								</div>
						</div>
					</div>

					<div class="user_content">
						<div class="uk-margin-top">
							<h3 class="full_width_in_card heading_c">
								@Model.Message
							</h3>
							<div class="uk-grid" data-uk-grid-margin="">
								<div class="uk-width-medium-1-3 uk-row-first">
									<div class="md-input-wrapper md-input-filled">
										<label for="user_edit_uname_control">کلمه عبور قبلی</label>
										<input class="md-input" 
											   type="password" 
											   id="user_edit_uname_control" 
											   name="OldPassword" 
											   value="@Model.OldPassword"
											   maxlength="20" required
                                               oninput="setCustomValidity('')"
                                               oninvalid="this.setCustomValidity('کلمه عبور اجباری است')">
										<span class="md-input-bar"></span>
									</div>
								</div>
							</div>
							<div class="uk-grid" data-uk-grid-margin="">
								<div class="uk-width-medium-1-3 uk-row-first">
									<div class="md-input-wrapper md-input-filled">
										<label for="user_edit_uname_control">کلمه عبور جدید</label>
										<input class="md-input" 
											   type="password" 
											   id="user_edit_uname_control" 
											   name="NewPassword" 
											   value="@Model.NewPassword"
											   maxlength="20" required
                                               oninput="setCustomValidity('')"
                                               oninvalid="this.setCustomValidity('کلمه عبور اجباری است')">
										<span class="md-input-bar"></span>
									</div>
								</div>
							</div>
							<div class="uk-grid" data-uk-grid-margin="">
								<div class="uk-width-medium-1-3">
									<div class="md-input-wrapper md-input-filled">
										<label for="user_edit_position_control">تکرار کلمه عبور</label>
										<input class="md-input" 
											   type="password" 
											   id="user_edit_position_control" 
											   name="ConfirmNewPassword" 
											   value="@Model.ConfirmNewPassword"
											   maxlength="20" required 
                                               oninput="setCustomValidity('')"
                                               oninvalid="this.setCustomValidity('تکرار کلمه عبور اجباری است')">
										<span class="md-input-bar"></span>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

	</form>

</div>

