<div data-bind="visible:contentVisible">
    <div style="font-size:larger;font-weight:bold !important;">Role Operation</div>
    <br />
    <div style="font-size:larger;">
        <span style="margin-left:20px;">Client Id</span> : <span data-bind="text:clientIdText"></span>
        <br />
        <span style="margin-left:20px;">Client Name</span> : <span data-bind="text:clientName"></span>
    </div>
    <br />
    <div class="rtl hidden-phone visible-desktop action-buttons crudGroupButton" id="">
        <a style="float:left;" name="" title="Back To Client Form" class="blue" data-bind="click:backToClient">
            <i data-bind="css:backIcon"></i>
        </a>
        <div style="float:right;margin-left:1%;">
            <a style="margin-left:5px;" name="" title="Add Role" class="blue" data-bind="click:addRole">
                <i data-bind="css:addIcon"></i>
            </a>
            <span class="ui-separator" style="vertical-align: top;">|</span>
            <a style="margin-left:5px" name="" title="Update Role" class="" data-bind="click:updateRole">
                <i data-bind="css:editIcon"></i>
            </a>
            <span class="ui-separator" style="vertical-align: top;">|</span>
            <a style="margin-left:5px" name="" title="Delete Role" class="" data-bind="click:deleteRole">
                <i data-bind="css:deleteIcon"></i>
            </a>
            <span class="ui-separator" style="vertical-align: top;">|</span>
            <a style="margin-left:5px;" name="" title="Show Role" class="" data-bind="click:showRole">
                <i data-bind="css:showIcon"></i>
            </a>
            <span class="ui-separator" style="vertical-align: top;">|</span>
            <a id="btnRefresfile" style="margin-left:5px" name="tooltipRefereshFile" title="Refresh Page" class="" data-bind="click:refreshMethod">
                <i class="fa fa-refresh bigger-150"></i>
            </a>
        </div>
    </div>
    <div class="row-fluid">
        <table id="dgvRole" class="table table-striped table-bordered dataTable" style="width:100% !important;"
               data-bind="dataTable:
            {
                refreshPage:refreshDataTablePage,
                selectedRowId:currentRowId,
                selectedRowsCollection:selectedRows,
                selectedCheckBoxColumn:true,
                multiselect:false,
                sourceType:'ajax',
                ajaxSource : mainUrl,
                gridId: 'dgvRole',
                idColumnName:'Id',
                autoBind:true,
                pagination:true,
                columns: [
                            { 'name': 'Id', 'searchable': false, 'sortable': false , 'visible' : false,title:'Id'},
                            { 'name': 'Name', 'searchable': false, 'sortable': false,title:'Name' },
                            { 'name': 'Description', 'searchable': false, 'sortable': false,title:'Description' }
                         ]
                ,serverParamsArray:[
                                       { propertyName: 'ClientId',observableValue:ClientId}
                                   ]
               }">

            <thead>
                <tr>
                    <th class="center" style="margin-right:10px;"></th>
                    <th class="center"></th>
                    <th class="center"></th>
                    <th class="center"></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
