<div data-bind="visible:contentVisible">
	<div class="rtl hidden-phone visible-desktop action-buttons crudGroupButton" id="">
		<div style="float:right;margin-left:1%;">
			<a style="margin-left:5px;" name="" title="Add User" class="blue" data-bind="click:addUser">
				<i data-bind="css:addIcon"></i>
			</a>
			<span class="ui-separator" style="vertical-align: top;">|</span>
			<a style="margin-left:5px" name="" title="Update User" class="" data-bind="click:updateUser">
				<i data-bind="css:editIcon"></i>
			</a>
			<span class="ui-separator" style="vertical-align: top;">|</span>
			<a style="margin-left:5px" name="" title="Delete User" class="" data-bind="click:deleteUser">
				<i data-bind="css:deleteIcon"></i>
			</a>
			<span class="ui-separator" style="vertical-align: top;">|</span>
			<a style="margin-left:5px;" name="" title="Show User" class="" data-bind="click:showUser">
				<i data-bind="css:showIcon"></i>
			</a>
			<span class="ui-separator" style="vertical-align: top;">|</span>
			<a id="btnRefresfile" style="margin-left:5px" name="tooltipRefereshFile" title="Refresh Page" class="" data-bind="click:refreshMethod">
				<i class="fa fa-refresh bigger-150"></i>
			</a>
		</div>
	</div>
	<div class="row-fluid">
		<table id="dgvUser" class="table table-striped table-bordered dataTable" style="width:100% !important;"
			   data-bind="dataTable:
            {
                refreshPage:refreshDataTablePage,
                selectedRowId:currentRowId,
                selectedRowsCollection:selectedRows,
                selectedCheckBoxColumn:true,
                multiselect:false,
                sourceType:'ajax',
                ajaxSource : mainUrl,
                gridId: 'dgvUser',
                idColumnName:'Id',
                autoBind:true,
                pagination:true,
                columns: [
                            { 'name': 'Id', 'searchable': false, 'sortable': false , 'visible' : false,title:'Id'},
                            { 'name': 'UserName', 'searchable': false, 'sortable': false,title:'UserName' },
                            { 'name': 'Email', 'searchable': false, 'sortable': false,title:'Email' },
                            { 'name': 'PhoneNumber', 'searchable': false, 'sortable': false,title:'PhoneNumber' }
                         ]
                ,serverParamsArray:[
                                       { propertyName: 'Id',observableValue:Id}
                                   ]
               }">

			<thead>
				<tr>
					<th class="center" style="margin-right:10px;"></th>
					<th class="center"></th>
					<th class="center"></th>
					<th class="center"></th>
					<th class="center"></th>
				</tr>
			</thead>
			<tbody></tbody>
		</table>
	</div>
</div>

