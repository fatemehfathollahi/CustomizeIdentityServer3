<div data-bind="visible:contentVisible">
	<div class="rtl hidden-phone visible-desktop action-buttons crudGroupButton" id="">
		<div style="float:right;margin-left:1%;">
			<a style="margin-left:5px;" name="" title="Add Client" class="blue" data-bind="click:addClient">
				<i data-bind="css:addIcon"></i>
			</a>
			<span class="ui-separator" style="vertical-align: top;">|</span>
			<a style="margin-left:5px" name="" title="Update Client" class="" data-bind="click:updateClient">
				<i data-bind="css:editIcon"></i>
			</a>
			<span class="ui-separator" style="vertical-align: top;">|</span>
			<a style="margin-left:5px" name="" title="Delete Client" class="" data-bind="click:deleteClient">
				<i data-bind="css:deleteIcon"></i>
			</a>
			<span class="ui-separator" style="vertical-align: top;">|</span>
			<a style="margin-left:5px;" name="" title="Show Client" class="" data-bind="click:showClient">
				<i data-bind="css:showIcon"></i>
			</a>
            @*<span class="ui-separator" style="vertical-align: top;">|</span>
            <a style="margin-left:5px;" name="" title="Client Role Operation" class="" data-bind="click:roleOperation">
                <i data-bind="css:roleIcon"></i>
            </a>*@
			<span class="ui-separator" style="vertical-align: top;">|</span>
			<a id="btnRefresfile" style="margin-left:5px" name="tooltipRefereshFile" title="Refresh Page" class="" data-bind="click:refreshMethod">
				<i class="fa fa-refresh bigger-150"></i>
			</a>
		</div>
	</div>
	<div class="row-fluid">
		<table id="dgvClient" class="table table-striped table-bordered dataTable" style="width:100% !important;"
			   data-bind="dataTable:
            {
                refreshPage:refreshDataTablePage,
                selectedRowId:currentRowId,
                selectedRowsCollection:selectedRows,
                selectedCheckBoxColumn:true,
                multiselect:false,
                sourceType:'ajax',
                ajaxSource : mainUrl,
                gridId: 'dgvClient',
                idColumnName:'Id',
                autoBind:true,
                pagination:true,
                columns: [
                            { 'name': 'Id', 'searchable': false, 'sortable': false , 'visible' : false,title:'Id'},
                            { 'name': 'ClientId', 'searchable': false, 'sortable': false,title:'Client Id' },
                            { 'name': 'ClientName', 'searchable': false, 'sortable': false,title:'Client Name' },
                            { 'name': 'EnableDescription', 'searchable': false, 'sortable': false,title:'State' }
                         ]
                ,serverParamsArray:[
                                       { propertyName: 'Id',observableValue:Id}
                                   ]
               }">

			<thead>
				<tr>
					<th class="center" style="margin-right:10px;"></th>
					<th class="center"></th>
					<th class="center"></th>
					<th class="center"></th>
					<th class="center"></th>
				</tr>
			</thead>
			<tbody></tbody>
		</table>
	</div>
</div>